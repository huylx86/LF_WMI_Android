<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wmi.finedu.activities.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tab_layout"/>

    <android.support.design.widget.TabLayout
        android:id="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="?attr/actionBarSize"
        app:tabIndicatorColor="@android:color/white"
        android:background="@color/gold"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tab_layout"
        android:layout_marginBottom="20dp"
        android:id="@+id/rl_contact_us">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@color/gold"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ln_contact_us">
            <ImageView android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/contact_us"
                    android:id="@+id/iv_contact_us"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/external_icon"
            android:visibility="invisible"
            android:id="@+id/ln_contact_us_detail">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/contact_us"
                android:id="@+id/iv_contact_us_detail"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:textColor="@android:color/white"
                      android:text="@string/contact_us"
                      android:id="@+id/tv_contact_us_detail"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_above="@id/rl_contact_us">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@color/gold"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ln_facebook">
            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/facebook"
                android:id="@+id/iv_facebook"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:background="@color/external_icon"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:id="@+id/ln_facebook_detail">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/facebook"
                android:id="@+id/iv_facebook_detail"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="@string/facebook"
                android:id="@+id/tv_facebook_detail"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
